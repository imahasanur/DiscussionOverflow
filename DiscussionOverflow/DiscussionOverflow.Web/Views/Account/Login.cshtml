@model LoginModel

@{
    ViewData["Title"] = "Log In";
}

<div class="container-registration">
    <div class="row justify-content-md-center">
        <h4 class="registration-title fw-bold " style="color:black;">@ViewData["Title"]</h4>
        <hr />
        <div class="col-md-8 col-sm-12 col-lg-8 shadow p-3 mb-5 rounded">
            <section>
                <form id="account" method="post" asp-antiforgery="true" asp-controller="Account" asp-action="Login" asp-area="" asp-route-returnurl="/User/TopQuestions">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Email" class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                    <div class="form-floating mb-3">
                        <img class="text-center" asp-area="" asp-controller="Captcha" asp-action="GenerateCaptchaImage" src="@Url.Action("GenerateCaptchaImage", "Captcha", new { area = "" })" alt="" />
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="CaptchaInput" class="form-control" autocomplete="off" aria-required="true" placeholder="FirstName" />
                        <label asp-for="CaptchaInput">CaptchaInput</label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a asp-area="" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>

                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
