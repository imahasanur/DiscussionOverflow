<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiscussionOverflow.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DiscussionOverflow.Web.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/content/css/Registration.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/css/Sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/css/TopQuestions.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/css/CreateQuestion.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/dist/simplemde.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/css/Profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/css/EditProfile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/content/css/QuestionDetails.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css" />
    <script src="~/content/dist/simplemde.min.js" asp-append-version="true"></script> 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <svg viewBox="0 0 100 100" width="50" height="50">
                        <!-- Lower rectangle -->
                        <rect x="25" y="75" width="30" height="10" fill="#0077cc" />
                        <!-- Middle rectangle -->
                        <rect x="20" y="60" width="40" height="10" fill="#0077cc" />
                        <!-- Top rectangle -->
                        <rect x="15" y="45" width="50" height="10" fill="#0077cc" />
                        <!-- Top circle -->
                        <circle cx="50" cy="35" r="5" fill="#0077cc" />
                    </svg>
                    DiscussionOverflow
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Questions">Questions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="QuestionTag">Tags</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Notification"><i class="fas fa-bell"></i>Notifications</a>
                                </li>
                            }
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer-part p-3 box-shadow">
        <footer>
            <div class="footer-container">
                <div class="footer-column">
                    <h3>About</h3>
                    <ul>
                        <li><a href="">Tour</a></li>
                        <li><a href="">Help</a></li>
                        <li><a href="">Chat</a></li>
                        <li><a href="">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Legal</h3>
                    <ul>
                        <li><a href="">Terms of Service</a></li>
                        <li><a href="">Privacy Policy</a></li>
                        <li><a href="">Cookie Policy</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Stack Exchange Network</h3>
                    <ul>
                        <li><a href="">Technology</a></li>
                        <li><a href="">Culture & recreation</a></li>
                        <li><a href="">Life & arts</a></li>
                        <li><a href="">Science</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
